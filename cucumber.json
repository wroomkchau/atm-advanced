{
  "default": {
    "formatOptions": {
     "snippetInterface": "async-await",
     "jiraOptions": {
			"regexp": "J-\\d+",
			"report": "reports/xray.json"
		}
    },
    "paths": ["tests/*.feature"],
    "publishQuiet": true,
    "dryRun": false,
    "require": ["steps/*.js"],
    "format": [
      "html:reports/cucumber-report.html", 
      "json:reports/cucumber-report.json",
      "junit:reports/cucumber-report.xml", 
      "progress"
    ]
  }
}